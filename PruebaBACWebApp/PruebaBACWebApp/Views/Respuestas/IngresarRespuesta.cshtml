@model PruebaBACWebApp.Models.Respuesta

<div class="card">
    <div class="card-body" style="padding:0.1rem;">
        <div class="mx-auto">
            <div class="row">
                <div class="col-md-10 mx-auto form">
                    <form asp-action="GuardarRespuesta">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="idPregunta" class="form-control" hidden readonly />
                        <input asp-for="usuario" class="form-control" hidden readonly />
                        <h6 class="card-subtitle mt-3 mb-2">
                            @@@ViewData["usuario"]:
                        </h6>
                        <div class="form-group">
                            <input asp-for="respuesta1" class="form-control" placeholder="Escribe tu respuesta aquí" />
                            <span asp-validation-for="respuesta1" class="text-danger"></span>
                        </div>
                        <div class="form-group container">
                            <div class="row justify-content-center">
                                <div class="col-5 ">
                                    <input type="submit" value="Publicar respuesta" class="btn btn-primary btn-block" />
                                </div>   
                                <div class="col-5">
                                    <input type="button" value="Cancelar" class="btn btn-secondary btn-block" onclick="MostrarRespuesta('respuesta-@Model.idPregunta',false);" />
                                </div>
                            </div>
                           

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
