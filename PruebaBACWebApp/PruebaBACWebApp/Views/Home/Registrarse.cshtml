@model PruebaBACWebApp.Models.Usuario

@{
    ViewData["Title"] = "Registrarse";
}
<br />
<br />
<div class="mx-auto">
    <h5 class="text-center">Cree su cuenta</h5>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <hr />
            @if (ViewBag.Error != null && ViewBag.Error != "")
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }

            <form asp-action="CrearUsuario">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="usuario1" class="control-label"></label>
                    <input asp-for="usuario1" class="form-control" />
                    <span asp-validation-for="usuario1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="contrasena" class="control-label"></label>
                    <input asp-for="contrasena" class="form-control" />
                    <span asp-validation-for="contrasena" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Registrarse" class="btn btn-success btn-block" />
                </div>
                <div class="form-group">
                    <input type="button" value="Iniciar Sesión" class="btn btn-info btn-block" onclick="location.href='@Url.Action("Index", "Home")'">
                </div>
            </form>
        </div>
    </div>

    <div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
